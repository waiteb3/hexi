+---
+apiVersion: v1
+kind: Service
+metadata:
+  name: hexi
+  namespace: default
+spec:
+  selector:
+    app: hexi
+  ports:
+    - protocol: TCP
+      port: 80
+---
+apiVersion: apps/v1
+kind: Deployment
+metadata:
+  name: hexi
+  namespace: default
+spec:
+  selector:
+    matchLabels:
+      app: hexi
+  template:
+    metadata:
+      labels:
+        app: hexi
+    spec:
+      containers:
+      - name: hexi
+        image: localhost:32000/hexi
+        ports:
+        - containerPort: 80
+---
+apiVersion: gitkube.sh/v1alpha1
+kind: Remote
+metadata:
+  name: hexi
+  namespace: default
+spec:
+# Insert ssh-keys for allowing users to git push
+  authorizedKeys:
+  - "ssh-rsa  brandon@bisontrails.co"
+  - "ssh-rsa  server@ubuntu"
+
+# Provide registry details: https://github.com/hasura/gitkube/blob/master/docs/registry.md
+  registry:
+    url: "localhost:32000"
+
+# Define deployment rules
+  deployments:
+  - name: hexi                             # Name of K8s deployment which is updated on git push
+    containers:
+    - name: hexi                           # Name of container in the deployment which is built during git push
+      path: .                   # Docker build context path in the git repo
+      dockerfile: Dockerfile  # Location of Dockerfile for the source code
